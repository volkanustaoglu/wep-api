@model MailGonder.Models.DavetiyeModel


@{
    ViewBag.Title = "Index";
}

<div class="panel panel-primary">
    <div class="panel-heading"><h4>Toplantıya Davetlisin!</h4></div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label>Ad :</label>
                @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Eposta :</label>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Katılacak mısın ?</label>
                @Html.DropDownListFor(x => x.KatilacakMi, new[] {
                    new SelectListItem() {Text = "Evet,Geliyorum.",
                    Value = bool.TrueString},
                    new SelectListItem() {Text = "Hayır, Gelmiyorum.",
                    Value = bool.FalseString}
                        }, "---------", new { @class = "form-control" })
            </div>
            <div class="text-center">
                <input class="btn btn-success" type="submit" value="Gönder" />
            </div>
        }
    </div>
</div>


